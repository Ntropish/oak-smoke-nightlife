extends layout
block scripts
   script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js")
   script(src="javascripts/index.js")

block content
    div(ng-app="nightlife" ng-controller="NightlifeCtrl as nl")
        div#authenticator
            button(class="btn" ng-click="switchTab(0)")
                | Login
            button(class="btn" ng-click="switchTab(1)")
                | Register
            form(novalidate)
                input(type="text" class="authenticator-input" ng-model="username" placeholder="Username")
                input(type="password" class="authenticator-input" ng-model="password" placeholder="Password")
                input(type="password" ng-show="tab === 1" class="authenticator-input" ng-model="confirm" placeholder="Confirm")
        div#display
            button(class="btn" ng-click="findBars()")
                | Find local bars
            div(ng-repeat="bar in bars")
                h4.ng-cloak {{ bar.name }}